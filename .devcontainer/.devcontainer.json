    "editorconfig.editorconfig",
    "kuscamara.electron",
    "usernamehw.errorlens",
    "webstp.extension-manager",
    "vscjava.vscode-java-pack",
    "mhutchie.git-graph",
    "github.copilot",
    "github.vscode-pull-request-github",
    "eamodio.gitlens",
    "richardwillis.vscode-gradle-extension-pack",
    "vscjava.vscode-gradle",
